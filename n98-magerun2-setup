#!/bin/bash

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

printf "${GREEN}Setting up n98-magerun2 command for DDEV...${NC}\n"

# Check if ddev n98-magerun2 is already installed
if [ -f .ddev/commands/web/n98-magerun2 ]; then
  printf "${RED}ddev n98-magerun2 is already installed. Aborting installation.${NC}\n"
  exit 1
fi

# Determine the bin directory location
if [ -d src ]; then
  BIN_DIR="src/bin"
else
  BIN_DIR="bin"
fi

# Navigate to the bin directory
cd "$BIN_DIR" || { printf "${RED}Failed to change directory to $BIN_DIR${NC}\n"; exit 1; }

# Download n98-magerun2.phar
wget https://files.magerun.net/n98-magerun2.phar

# Rename n98-magerun2.phar to n98-magerun2
mv n98-magerun2.phar n98-magerun2

# Navigate back to the root directory
cd - || { printf "${RED}Failed to change back to the root directory${NC}\n"; exit 1; }

# Ensure .ddev/commands/web directory exists
mkdir -p .ddev/commands/web

# Create the n98-magerun2 file with the provided content
cat << 'EOF' > .ddev/commands/web/n98-magerun2
#!/bin/bash

## Description: Run n98-magerun2 CLI inside the web container
## Usage: n98-magerun2 [flags] [args]
## Example: "ddev n98-magerun2 list" or "ddev n98-magerun2 maintenance:enable" or "ddev n98-magerun2 sampledata:reset"

if [ ! -f bin/n98-magerun2 ]; then
  echo 'bin/n98-magerun2 does not exist.'
  echo 'Please verify that you installed n98-magerun2 under <project-root>/bin directory.'
  exit 1
fi

php bin/n98-magerun2 "$@"
EOF

# Make the script executable
chmod +x .ddev/commands/web/n98-magerun2

printf "${GREEN}ddev n98-magerun2 command has been set up successfully.${NC}\n"
printf "${YELLOW}Run 'ddev start' to apply the changes.${NC}\n"
printf "${YELLOW}Then you can use 'ddev n98-magerun2' to run n98-magerun2 commands inside the web container.${NC}\n"
